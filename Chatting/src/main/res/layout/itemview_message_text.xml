<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--发送-->
    <RelativeLayout
        android:id="@+id/message_text_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:id="@+id/userHead_item_message_text_send"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/default_user_header" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/userHead_item_message_text_send"
            android:background="@drawable/chat_bubble_right"
            android:gravity="center"
            android:text="你好"
            android:textColor="@color/black"
            android:textSize="17sp"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

    <!--接受-->
    <RelativeLayout
        android:id="@+id/message_text_receive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/userHead_item_message_text_left"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/default_user_header" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/userHead_item_message_text_left"
            android:background="@drawable/chat_bubble_left"
            android:gravity="center"
            android:text="你好"
            android:textColor="@color/black"
            android:textSize="17sp"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

</LinearLayout>